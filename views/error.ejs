<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-8 offset-2">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading text-center"><%= err.message %></h4>
        <% if (process.env.NODE_ENV !== 'production') { %> 
            <p class="mb-0 text-center">Error status code: <%= err.statusCode %></p>
            <hr>
            <p><%= err.stack %></p>
        <% } %> 
          </div>
    </div>
</div>